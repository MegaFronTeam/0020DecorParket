mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin section-title(h, l)
	if l
		+b.section-title--link
			.row
				.col
					h2!= h
				.col-auto
					+e.link(href="#")
						span.d-sm-none Все
						span.d-none.d-sm-block!= l
	else
		+b.section-title
			h2!= h

mixin article-item(img, s, h, p)
	// start article-item
	+b.article-item(href="#")
		+e.img-wrap
			+img(`img/${img}`, 'bg')
		+e.subtitle!= s
		h3!= h
		if p
			p!= p
	// end article-item