mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin searchBlock()
	+b.search-block 
		// вешать класс .show-result
		form
			input(type="text" placeholder="Поиск товаров")
			button
				+icon("search")
			+e.close
				+icon("close")
		+e.result
			each item in search
				+e.result-item(href="#")
					//- +icon("search")
					= item

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin section-title(h, l, mnu)
	+b.section-title--link
		.row
			.col
				h2!= h
			.col-auto.order-md-last
				+e.link(href="#")
					span.d-sm-none Все
					span.d-none.d-sm-block!= l
			if mnu
				.col-12.my-0
				.col
					+e.menu-wrap
						block

mixin article-item(img, s, h, p)
	// start article-item
	+b.article-item(href="#")
		+e.img-wrap
			+img(`img/${img}`, 'bg')
		+e.subtitle!= s
		h3!= h
		if p
			p!= p
	// end article-item

mixin headerBlock-item(h, p, i)
	// start headerBlock-item
	+b.headerBlock-item
		h2!= h
		p!= p
		+e.btn.btn.btn-primary(href="#") Узнать подробнее
		picture.picture-bg
			source(type='image/jpg' srcset=`img/headerBlock-lg-${i}.jpg` media='(min-width:768px)')
			source(type='image/jpg' srcset=`img/headerBlock-${i}.jpg`)
			img.object-fit-js(src=`img/@2x/img-${i}.jpg` alt='' loading='lazy')
	// end headerBlock-item

mixin logo()
	+b.logo-wrap
		a(href="/")
			+img('img/svg/logo-header.svg')

mixin top-btns()
	// start top-btns
	+b.top-btns-wrap
		.container
			+b.top-btns
				+e.btn(href="#" class="catalog-toggle-js").d-lg-none
					+e.SPAN.inner
						+icon("menu-small") 
					+e.SPAN.title Каталог
				+e.btn(href="#").d-none.d-lg-flex
					+e.SPAN.inner
						+icon("user") 
					+e.SPAN.title Войти
				+e.btn(href="#")
					+e.SPAN.inner
						+icon("compare") 
					+e.SPAN.title Сравнение
				+e.btn(href="#").current
					+e.SPAN.inner
						+icon("heart")
						+e.SPAN.counter 2
					+e.SPAN.title Избранное
				+e.btn(type="button") 
					+e.SPAN.inner
						+icon("basket") 
						+e.SPAN.counter 6
					+e.SPAN.title Корзина
	// end top-btns

mixin star-block()
	// start star-block
	+b.star-block
		+icon('star').active
		+icon('star').active
		+icon('star').active
		+icon('star').active
		+icon('star')
	// end star-block

mixin product-card(...labels)
	// start product-card
	+b.product-card
		.slider-wrapper
			+e.slider--js.swiper
				.swiper-wrapper
					- for (var i = 1; i < 5; i++)
						+e.slide.swiper-slide
							+e.img-wrap
								+img(`img/sCatalog-${i}.jpg`, 'bg')
			.swiper-pagination
		+e.caption
			+e.vendorCode Арт.&nbsp;00000000
			+e.title(href="#") Ламинат &laquo;Дуб Антик&raquo; 33&nbsp;класс толщина 10&nbsp;мм с&nbsp;фаской 1.975&nbsp;м&sup2;
			+e.label-wrap--top
				.row
					each label in labels
						.col-auto: +e.label(class= `${label.class}`)!= label.name
			+e.row.row
				.col-12
					+e.rating
						.row
							.col-auto
								+star-block()
							.col-auto
								span 12&nbsp;отзывов
				.col-auto
					+e.price 3&nbsp;980&nbsp;₽
				.col-auto
					+e.price--discount 00&nbsp;000&nbsp;₽
				.col
					+e.price--meter 1&nbsp;350&nbsp;₽/м&sup2;
				.col-12.my-0
				.col-auto
					+e.btn-basket.btn.btn-primary(href="#") В&nbsp;корзину
				.col
					+e.btn-wrap
						+e.btn(href="#")
							+icon('compare')
						+e.btn(href="#").active
							+icon('heart')
	// end product-card