mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin searchBlock()
	+b.search-block 
		// вешать класс .show-result
		form
			input(type="text" placeholder="Поиск товаров")
			button
				+icon("search")
			+e.close
				+icon("close")
		+e.result
			each item in search
				+e.result-item(href="#")
					//- +icon("search")
					= item

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin section-title(h, l, mnu)
	+b.section-title--link
		.row
			.col
				h2!= h
			.col-auto.order-md-last
				+e.link(href="#")
					span.d-sm-none Все
					span.d-none.d-sm-block!= l
			if mnu
				.col-12.my-0
				.col
					+e.menu-wrap
						block

mixin article-item(img, s, h, p)
	// start article-item
	+b.article-item(href="#")
		+e.img-wrap
			+img(`img/${img}`, 'bg')
		+e.subtitle!= s
		h3!= h
		if p
			p!= p
	// end article-item

mixin logo()
	+b.logo-wrap
		a(href="/")
			+img('img/svg/logo-header.svg')

mixin top-btns()
	+b.top-btns-wrap
		.container
			+b.top-btns
				+e.btn(href="#").d-lg-none
					+icon("home") 
					+e.SPAN.title Главная
				+e.btn(href="#" class="catalog-toggle-js").d-lg-none
					+icon("menu-small") 
					+e.SPAN.title Каталог
				//- +e.btn(type="button" class="search-toggle--js").d-none.d-lg-flex
				//- 	+icon("search") 
				//- 	+e.SPAN.title Поиск
				+e.btn(href="#modal-cabinet").link-modal-custom-js 
					+icon("user") 
					+e.SPAN.title Профиль
				+e.btn(href="#").current 
					+icon("like") 
					+e.SPAN.title Избр
				+e.btn(type="button") 
					+e.SPAN.inner
						+icon("basket") 
						+e.SPAN.counter 4
					+e.SPAN.title Корзина