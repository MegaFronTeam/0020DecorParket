mixin cartList()
	// start cartList
	+b.cartList
		+e.head
			+in-c("checkbox", 'Выбрать все')
			+e.BUTTON.btn--close.text-danger
				+icon('close')
				span Удалить выбранные
		if block
			block
		else
			mixin cartListItem
				+e.item
					table
						tr
							td
								input.custom-input__input.form-check-input(name='checkbox' type='checkbox')
							td
								+img('img/sCart-1.jpg').res-i
							td
								p Ламинат &laquo;Дуб Антик&raquo; 33&nbsp;класс толщина 10&nbsp;мм с&nbsp;фаской 1.975&nbsp;м&sup2;
								p Арт. 00000000
								+e.btn-wrap
									+e.BUTTON.btn--favorites.active
										+icon('heart')
										span В&nbsp;избранное
									+e.BUTTON.btn--clear
										+icon('close')
										span Удалить
							td
								+e.price-wrap
									span 8 600 ₽
									span 4 670 ₽
							td.text-end
								+addblock()
			+cartListItem
			+cartListItem
			+cartListItem
	// end cartList

mixin choiceOption(title, text, name)
	// start choiceOption
	+b.choiceOption
		label
			input.btn-check(name=`${name}` type='radio')&attributes(attributes)
			+e.SPAN.btn
				+e.SPAN.check
					+icon('check')
				+e.SPAN.content
					span.h5!= title 
					+e.SPAN.text!= text
			
	// end choiceOption

