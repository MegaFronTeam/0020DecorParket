mixin section-title(h1, h2, l, mnu, amount)
	+b.section-title--link
		.row
			.col
				if h1
					.h1!= h1
				if h2
					h2!= h2
			if amount
				.col-auto.d-none.d-md-block.text-secondary
					span!= amount
			if l
				.col-auto.order-md-last
					+e.link(href="#")
						span.d-sm-none Все
						span.d-none.d-sm-block!= l
			if mnu
				.col-12.my-0
				.col
					+e.menu-wrap
						block

