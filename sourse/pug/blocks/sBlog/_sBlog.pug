	+b.SECTION.sBlog.section#sBlog&attributes(attributes)
		.container
			+b.section-title
				h1 Блог
			+e.row.row
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-1.jpg`, `Напольные покрытия`, `Как выбрать хороший ламинат&nbsp;&mdash; советы покупателям`)
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-2.jpg`, `Напольные покрытия`, `Подложка под ламинат: сравнительный обзор различных видов`)
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-3.jpg`, `Напольные покрытия`, `Подготовка деревянного пола к&nbsp;укладке ламината`)
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-4.jpg`, `Напольные покрытия`, `Как выбрать хороший ламинат&nbsp;&mdash; советы покупателям`)
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-5.jpg`, `Напольные покрытия`, `Подготовка деревянного пола к&nbsp;укладке ламината`)
				+e.col.col-md-6.col-lg-4
					+article-item(`sArticles-6.jpg`, `Напольные покрытия`, `Подложка под ламинат: сравнительный обзор различных видов`)
			+e.footer
				+e.btn(href="#").btn.btn-light Загрузить ещё
				+pagin-sm().d-sm-none
				+pagin-lg().d-none.d-sm-block
	// end sBlog