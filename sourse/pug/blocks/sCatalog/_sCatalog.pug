mixin product-item(i, t, p ,pr)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			//- если надо картинку по центру  вывести использовать обертку .img-wrap-center  - если нет- убираем
			.img-wrap-center 
				+img(`img/prod-${i}.jpg`)
		+e.caption
			+e.title!= t
			+e.text!= p
			+e.price!= pr
			+e.btn(href='#')
	// /.product-item

mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		.container
			+section-title('Рекомендуем вам', 'Смотреть все', 'mnu')
				+weRecommend
			.row
				mixin product-card()
					+b.product-card
						.slider-wrapper
							+e.slider--js.swiper
								.swiper-wrapper
									- for (var i = 1; i < 5; i++)
										+e.slide.swiper-slide
											+e.img-wrap
												+img(`img/sCatalog-${i}.jpg`, 'bg')
							.swiper-pagination
						+e.caption
							+e.vendorCode Арт.&nbsp;00000000
							p Ламинат &laquo;Дуб Антик&raquo; 33&nbsp;класс толщина 10&nbsp;мм с&nbsp;фаской 1.975&nbsp;м&sup2;
							+e.rating
								+star-block()
								span 12&nbsp;отзывов
							.row
								.col-auto
									+e.price 3&nbsp;980&nbsp;₽
								.col-auto
									+e.price--discount 00&nbsp;000&nbsp;₽
								.col
									+e.price--meter 1&nbsp;350&nbsp;₽/м&sup2;
								.col-12.my-0
								.col-auto
									+e.btn-basket.btn.btn-primary(href="#") В&nbsp;корзину
								.col
									+e.btn-wrap
										+e.btn(href="#")
											+icon('compare')
										+e.btn(href="#")
											+icon('heart')
				- for (var x = 1; x < 5; x++)
					.col-3
						+product-card()

