mixin account()
	+b.menu-slider--js.swiper
		ul.menu.swiper-wrapper(itemscope itemtype="http://schema.org/SiteNavigationElement")
			each link in account
				li.menu-item.swiper-slide(itemprop="item" )
					a(href="#" itemprop="url" class=(link.active  ? "active": null))= link.name
						+icon('chevron-right')

