mixin sSideMenu(t)
	// start sSideMenu
	+b.sSideMenu&attributes(attributes) 
		if t
			+e.title
				h5!= t
				+icon('chevron-right')
		block
	// end sSideMenu


mixin sideInfo()
	ul.menu(itemscope itemtype="http://schema.org/SiteNavigationElement")&attributes(attributes) 
		each link in sideInfo
			li.menu-item(itemprop="item" )
				a(href="#" itemprop="url" class=(link.active  ? "active": null))= link.name
					+icon('chevron-right')

